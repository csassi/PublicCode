@model ImaginationWorkgroup.Infrastructure.Models.EmailAdoptedModel
<style>
    #outlook a {
        padding: 0;
    }

    .jumbotron {
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        background-color: #e9ecef;
        border-radius: 0.3rem;
    }

    .jumbotron {
        padding: 4rem 2rem;
    }

    h1, h2, h3, h4, h5, h6 {
        margin-top: 0px;
        margin-bottom: 0.5rem;
    }

    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        margin-bottom: 0.5rem;
        font-family: inherit;
        font-weight: 500;
        line-height: 1.2;
        color: inherit;
    }

    h1, .h1 {
        font-size: 2.5rem;
    }

    .display-3 {
        font-size: 4.5rem;
        font-weight: 300;
        line-height: 1.2;
    }

    p {
        margin-top: 0px;
        margin-bottom: 1rem;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    hr {
        box-sizing: content-box;
        height: 0px;
        overflow: visible;
    }

    hr {
        margin-top: 1rem;
        margin-bottom: 1rem;
        border: 0;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    a {
        color: #007bff;
        text-decoration: none;
        background-color: transparent;
        -webkit-text-decoration-skip: objects;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-sm, .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.87rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

    :not(:disabled):not(.disabled).btn {
        cursor: pointer;
    }

    b, strong {
        font-weight: bolder;
    }

    small, .small {
        font-size: 80%;
        font-weight: 400;
    }
</style>

<div class="jumbotron text-xs-center">
    @if (Model.IsAdminEmail || Model.IsSupEmail)
    {
        <h1 class="display-3">An Idea Has Been Adopted!</h1>
    }
    else
    {
        <h1 class="display-3">Your idea has been Adopted!</h1>
    }
    <p class="lead">
        <span>
            <br /> @if (Model.IsSupEmail)
            {
                <span> Hello @Model.Name, this is in regards to an idea your employee, @Model.EmployeeName, submitted.</span>
            }
            else
            {
                <span> Hello @Model.Name,</span>
            }
            <br />
            <br />
            @if (Model.IsAdminEmail && !Model.IsSupEmail)
            {
                
                <span>
                    Idea <a href="@Url.Action("Index", "Details", new { area = "Idea", id = Model.Id}, Request.Url.Scheme)">#@Model.Id @Model.Title.</a> has been approved by Imagination Workgroup Reviewers for Development.   The idea details are viewable on the <a href="@Url.Action("Index", "Home", new { area = ""}, Request.Url.Scheme)">Imagination Workgroup Website</a>.
                    <br />
                    <br />
                    Please take appropriate action.
                </span>
            }
            else
            {
                <span>
                    The Imagination Workgroup has carefully reviewed the idea <a href="@Url.Action("Index", "Details", new { area = "Idea", id = Model.Id}, Request.Url.Scheme)">#@Model.Id @Model.Title.</a>
                    <br />
                    <br />
                    The idea has been adopted and forwarded to our development staff.
                    <br />
                    <br />
                    To view the status of this idea and other ideas, please visit the <a href="@Url.Action("Index", "Home", new { area = ""}, Request.Url.Scheme)">Imagination Workgroup Website</a>.
                </span>
            }
            <br />
            <br />
            <span>Thank You,</span>
            <br />
            <br />
            <span>-The Imagination Workgroup Team</span>
            <br />
            <br />
            <span>Please do not respond to this email.</span>
        </span>
    </p>
    <hr>
    <p class="lead">
        <a href="@Url.Action("Index", "List", new { area = "Idea"}, Request.Url.Scheme)" class="btn btn-primary btn-sm">Continue to View Ideas</a>
    </p>
    <p class="lead">
        <a href="@Url.Action("Index", "Create", new { area = "Idea"}, Request.Url.Scheme)" class="btn btn-primary btn-sm">Continue to Submit Idea</a>
    </p>
</div>






