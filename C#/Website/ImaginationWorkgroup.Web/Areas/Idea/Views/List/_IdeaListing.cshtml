
@using ImaginationWorkgroup.Web.Utilities

<table class="table tablesorter">
    <thead class="thead-light-site">
        <tr>
            <th class="w-25" title="The system generated identifier and the user submitted title for the idea">Id-Title</th>
            <th title="The current status of the idea">Status</th>
            <th title="The date this idea was submitted">Created Date</th>
            <th title="The date this idea was last modified">Last Modified</th>
            @if (FeatureUtility.GetFeatures().ShowCreator)
            {
                <th title="The person that submitted the idea">Creator</th>
            }
            <th title="The requesting component">Component</th>
            <th title="The location selected when the idea was submitted">Location</th>
            <th title="Actions to take with the idea">Actions</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: listItems">
        <tr>
            <td data-bind="text: titleDisplay"></td>
            <td data-bind="text: status"></td>
            <td data-bind="text: created, attr: {'data-text': createdLocal}"></td>
            <td data-bind="text: modified, attr: {'data-text': modifiedLocal}"></td>
            @if (FeatureUtility.GetFeatures().ShowCreator)
            {
            <td data-bind="text: creator"></td>
            }
            <td data-bind="text: component"></td>
            <td data-bind="text: location"></td>
            <td>
                <!-- ko if: $parent.shouldShowIdea($data) -->
                <a href="#" data-bind="attr: {href: detailsLink}">View Idea</a>
                <!-- /ko -->
            </td>
        </tr>
    </tbody>
</table>